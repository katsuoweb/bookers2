<div class="container px-5 px-sm-0 margin-top">
  <% if flash[:count] %>
    <div class="error_explanation">
      <h3><%= flash[:count] %>  error prohibited this obj from being saved:</h3>
      <ul>
        <% flash[:messages].each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-3">
      <%= render 'component/user_info', user: @user %>
      <%= render 'component/new_book', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size: "40x40" %></td>
            <td><%= link_to "#{book.title}", book_path(book) %></td>
            <td><%= book.opinion %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>