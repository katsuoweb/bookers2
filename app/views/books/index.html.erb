<div class="container px-5 px-sm-0 margin-top">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size: "100x100" %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <a class="btn btn-outline-secondary btn-block user-edit-btn" href="/users/<%= @user.id %>/edit">
          <i class="fas fa-user-cog"></i>
        </a>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @new_book, url: "/books", local: true do |f| %>
      <div class="form-group">
        <label for="book_title">Title</label>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group">
        <label for="book_opinion">Opinion</label>
        <%= f.text_area :opinion, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit 'Create Book', class: "btn btn-success" %>
      </div>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <% @books.each do |book| %>
            <td><%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size: "40x40" %></td>
            <td><%= link_to "#{book.title}", book_path(book) %></td>
            <td><%= book.opinion %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>