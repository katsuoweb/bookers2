<div class="container margin-top">
  <div class="row">
    <div class="col-md-3">
      <%= render 'component/user_info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @new_book, url: "/books", local: true do |f| %>
      <div class="form-group">
        <label for="book_title">Title</label>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group">
        <label for="book_opinion">Opinion</label>
        <%= f.text_area :opinion, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit 'Create Book', class: "btn btn-success" %>
      </div>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <a href="/users/<%= @book.id %>">
                <%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size: "40x40" %>
                <br>
                <%= @user.name %>
              </a>
            </td>
            <td>
              <%= link_to "#{@book.title}", book_path(@book) %>
            </td>
            <td>
              <%= @book.opinion %>
            </td>
            <td>
              <%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success" %>
            </td>
            <td>
              <%= link_to "Destoy", book_path(@book), method: :delete, data: { confirm: "本当に消しますか？" }, class: "btn btn-sm btn-danger" %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>